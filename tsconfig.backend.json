{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./backend",
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": [
    "backend/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}